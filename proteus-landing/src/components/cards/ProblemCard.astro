---
import Icon from '../Icon.jsx';
const { icon, title, description, stat, statLabel } = Astro.props;
---

<div class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 hover:shadow-[0_0_25px_rgba(255,255,255,0.1)] transition-all duration-300">
  <div class="w-12 h-12 bg-gradient-to-br from-red-500/20 to-red-600/10 rounded-lg flex items-center justify-center mb-4">
    <Icon name={icon} className="w-6 h-6 text-red-400" client:load />
  </div>

  <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
  <p class="text-slate-300 text-sm leading-relaxed mb-4">{description}</p>

  <div class="pt-4 border-t border-white/10">
    <div class="text-2xl font-bold text-red-400">{stat}</div>
    <div class="text-xs text-slate-400">{statLabel}</div>
  </div>
</div>
