---
import Icon from '../Icon.jsx';
const { icon, title, description } = Astro.props;
---

<div class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-cyan-400/40 hover:shadow-[0_0_25px_rgba(6,182,212,0.2)] transition-all duration-300">
  <div class="w-12 h-12 bg-gradient-to-br from-cyan-500/20 to-purple-600/10 rounded-lg flex items-center justify-center mb-4">
    <Icon name={icon} className="w-6 h-6 text-cyan-400" client:load />
  </div>

  <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
  <p class="text-slate-300 text-sm leading-relaxed">{description}</p>
</div>
