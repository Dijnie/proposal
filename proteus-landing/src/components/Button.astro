---
interface Props {
  variant?: 'primary' | 'secondary';
  href?: string;
}

const { variant = 'primary', href = '#' } = Astro.props as Props;

const baseClasses = 'inline-flex items-center gap-2 px-5 py-3 text-base font-medium rounded-md transition-all duration-300 hover:scale-105';

const variants: Record<'primary' | 'secondary', string> = {
  primary: 'text-white bg-gradient-to-br from-white/5 via-white/10 to-white/5 border border-white/10 hover:border-cyan-400/40 hover:shadow-[0_0_25px_rgba(6,182,212,0.35)]',
  secondary: 'text-white bg-gradient-to-br from-white/5 via-white/10 to-white/5 border border-white/10 hover:border-purple-400/40 hover:shadow-[0_0_25px_rgba(168,85,247,0.35)]',
};

const classes = `${baseClasses} ${variants[variant]}`;
---

<a href={href} class={classes}>
  <slot />
</a>
